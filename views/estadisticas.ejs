<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Estadísticas de Resultados</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://site-assets.fontawesome.com/releases/v6.7.2/css/all.css">
</head>

<body class="bg-gray-900 text-gray-100 p-8">
    <div class="container mx-auto max-w-7xl">
        <div class="text-right mb-6">
            <a href="/" class="px-4 py-2 bg-zinc-700 text-white rounded-md shadow-md hover:bg-zinc-600 transition duration-300 flex items-center gap-2 w-max">
                <li class="fas fa-home"></li> Inicio</a>
        </div>
        <h1 class="text-5xl font-extrabold text-white text-center mb-12">
            Estadísticas de Resultados
        </h1>

        <!-- Tabla de estadísticas -->
        <div class="overflow-x-auto">
            <table class="min-w-full bg-gray-800 text-white rounded-lg shadow-lg">
                <thead>
                    <tr class="bg-gray-700">
                        <th class="px-6 py-4 text-left">Imagen</th>
                        <th class="px-6 py-4 text-left">Animal</th>
                        <th class="px-6 py-4 text-left">Número</th>
                        <th class="px-6 py-4 text-left">Veces que salió</th>
                    </tr>
                </thead>
                <tbody>
                    <% estadisticas.forEach((stat) => { %>
                        <tr class="border-b border-gray-600">
                            <td class="px-6 py-4">
                                <img src="<%= stat.imagenURL %>" alt="<%= stat.animal %>" class="w-20 h-20 w-max rounded-full">
                            </td>
                            <td class="px-6 py-4 font-bold"><%= stat.animal %></td>
                            <td class="px-6 py-4 font-bold"><%= stat.numero %></td>
                            <td class="px-6 py-4 font-bold"><%= stat.count %></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</body>

</html>
